(defproblem problem drone
	(
	(gripper gripper_1_left)
	(gripper gripper_1_right)

	(transportador transportador1)
	(capacidadtrans transportador1 20)
	(transportador-at transportador1 location_deposito)

	(nboxes-at transportador1 food 0)
	(nboxes-at transportador1 medicine 0)
	(transportador transportador2)
	(capacidadtrans transportador2 50)
	(transportador-at transportador2 location_deposito)

	(nboxes-at transportador2 food 0)
	(nboxes-at transportador2 medicine 0)
	(transportador transportador3)
	(capacidadtrans transportador3 100)
	(transportador-at transportador3 location_deposito)

	(nboxes-at transportador3 food 0)
	(nboxes-at transportador3 medicine 0)
	(location location_deposito)
	(location loc1)
	(location loc2)
	(location loc3)

	(nboxes-at location_deposito food 300)
	(nboxes-at location_deposito medicine 300)
	(nboxes-at loc1 food 0)
	(nboxes-at loc1 medicine 0)
	(nboxes-at loc2 food 0)
	(nboxes-at loc2 medicine 0)
	(nboxes-at loc3 food 0)
	(nboxes-at loc3 medicine 0)
	(type food)
	(type medicine)

	(ncajas food 25)
	(ncajas medicine 25)
	(supply-needed food loc1 10)
	(supply-needed medicine loc1 10)
	(supply-needed food loc2 25)
	(supply-needed medicine loc2 25)
	(supply-needed food loc3 50)
	(supply-needed medicine loc3 50)
	(gripper-at gripper_1_left location_deposito)
	(gripper-at gripper_1_right location_deposito)

	(free gripper_1_left)
	(free gripper_1_right)

	(gripper-pair gripper_1_right gripper_1_left)
	(gripper-pair gripper_1_left gripper_1_right)

	)
	(:unordered
		(enviar-todo)
	)
)
